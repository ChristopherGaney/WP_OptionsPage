{
  "name": "OptionsPage",
  "version": "1.0.0",
  "description": "An Options Page Plugin",
  "main": "options-page.php",
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "browserify": "^16.2.3",
    "eslint": "^4.19.1",
    "node-sass": "^4.9.3",
    "onchange": "^3.3.0",
    "uglify-js": "^3.6.0",
    "watchify": "^3.11.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/js",
    "compress:css": "node-sass --include-path scss src/scss/app.scss dist/css/app.min.css --output-style compressed",
    "compress:js": "browserify src/js/app.js | uglifyjs -c > dist/js/app.min.js",
    "compile:css": "node-sass --include-path scss src/scss/app.scss dist/css/app.min.css",
    "compile:js": "browserify src/js/app.js -o dist/js/app.min.js",
    "watch:js": "onchange 'src/js/**/*.js' -- npm run compile:js",
    "watch:css": "onchange 'src/scss/**/*.scss' -- npm run compile:css",
    "build": "npm run compress:js & npm run compress:css",
    "observe": "npm run watch:js & npm run watch:css"
  },
  "keywords": [],
  "author": "Christopher Ganey",
  "license": "ISC"
}
